<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<div class="idxsrc">
  <%= search_form_for @q do |f| %>
  <div class="idxsrc__box">
    <h3 class="idxsrc__title">絞り込み</h3>
    <div class="idxsrc__group">
      <%= f.label :company, "会社名" %>
      <%= f.search_field :company_cont, class: 'form__txt' %>
    </div>
    <div class="idxsrc__group">
      <%= f.label :name, "名前" %>
      <%= f.search_field :name_cont, class: 'form__txt' %>
    </div>
    <div class="idxsrc__group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.search_field :email_cont, class: 'form__txt' %>
    </div>
    <div class="idxsrc__group">
      <%= f.label :phone, "電話番号" %>
      <%= f.search_field :phone_cont, class: 'form__txt' %>
    </div>
    <div class="idxsrc__group">
      <%= f.label :contact, "お問い合わせ内容" %>
      <%= f.search_field :content_cont, class: 'form__txt' %>
    </div>
    <div class="idxsrc__submit">
      <%= f.submit "検索", class: 'btn' %>
    </div>
  </div>
  <% end %>
</div>