<%= form_with model: @user, url: invites_path, local: true, class: 'form' do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form__group inline">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email, class: 'form__txt' %>
  </div>
  <%= f.submit '招待', class: 'btn' %>
<% end %>